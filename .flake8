[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
exclude = 
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    venv,
    node_modules,
    .tox,
    .eggs,
    build,
    dist,
    src/qwen3_vl_new.egg-info
per-file-ignores = 
    __init__.py:F401  # imported but unused in __init__.py files