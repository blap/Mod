{
  "training": {
    "learning_rate": 5e-5,
    "batch_size": 16,
    "num_epochs": 3,
    "warmup_steps": 100,
    "weight_decay": 0.01,
    "adam_epsilon": 1e-8,
    "max_grad_norm": 1.0,
    "logging_steps": 10,
    "eval_steps": 500,
    "save_steps": 1000,
    "max_steps": -1,
    "gradient_accumulation_steps": 1,
    "warmup_ratio": 0.1,
    "lr_scheduler_type": "linear",
    "fp16": true,
    "dataloader_num_workers": 4,
    "load_best_model_at_end": true,
    "metric_for_best_model": "loss",
    "greater_is_better": false
  },
  "model": {
    "use_adapters": true,
    "adapter_config": {
      "reduction_factor": 16,
      "non_linearity": "relu",
      "scaling_factor": 1.0
    }
  }
}