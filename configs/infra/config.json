{
  "infrastructure_config": {
    "github_actions": {
      "enable_templates": true,
      "template_directory": "configs/infra/github-actions/action-templates",
      "common_env_script": "configs/infra/github-actions/common-env.sh",
      "matrix_strategy_file": "configs/infra/github-actions/matrix-strategy.json",
      "default_timeout": 3600,
      "max_concurrent_jobs": 10
    },
    "deployment": {
      "target_platforms": ["linux", "windows"],
      "container_registry": "ghcr.io",
      "artifact_retention_days": 30
    },
    "monitoring": {
      "enable_resource_monitoring": true,
      "enable_performance_tracking": true,
      "metrics_collection_interval": 60
    }
  }
}